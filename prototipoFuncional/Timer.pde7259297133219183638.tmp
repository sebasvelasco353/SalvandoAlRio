public class Timer {
  int ellapsedTime;
  boolean finished, running;

  public Timer () {
    ellapsedTime = 0;
    running = false;
  }

  public void runTimer () {
    if (running == true) {
      ellapsedTime = millis () /1000; 
      if (ellapsedTime == 30) {
        running = false;
      }
    }
  }

  public void startTimer () {
    running = true;
  }

  public boolean finishedGame () {
    return running;
  }
}